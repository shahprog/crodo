{
    "manifest_version": 2,
    "name": "Crodo",
    "description": "A todo app for chrome browser",
    "version": "1.0",
    "icons": {
        "128": "assets/icons/logo.png",
        "48": "assets/icons/logo.png",
        "16": "assets/icons/logo.png"
    },

    "browser_action": {
        "default": "assets/icons/logo.png",
        "default_popup": "/popup/login/login.html"
    },

    "permissions": [
        "storage"
    ]
}